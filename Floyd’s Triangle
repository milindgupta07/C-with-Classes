#include <iostream>
using namespace std;

int main() {
    int n, i = 1, j, num = 1;
    cout << "Enter rows: ";
    cin >> n;

    while(i <= n) {
        j = 1;
        while(j <= i) {
            cout << num << " ";
            num++;
            j++;
        }
        cout << endl;
        i++;
    }
    return 0;
}
