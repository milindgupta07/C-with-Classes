#include <iostream>
using namespace std;

int main() {
    int n;
    long long fact = 1, sum = 0;

    cout << "Enter number of terms: ";
    cin >> n;

    for(int i = 1; i <= n; i++) {
        fact *= i;
        sum += fact;
    }

    cout << "Sum of Factorial Series = " << sum;
    return 0;
}
